	"version": "2.0.0",
	"tasks": [
		{
			"label": "Git Add Commit Push",
			"type": "shell",
			"command": "git add . && git commit -a --allow-empty-message -m '' && git push",
			"presentation": {
				"reveal": "never",
				"clear": true,
				"revealProblems": "onProblem",
				"close": true,
				"focus": false
			},
			"isBackground": true,
			"problemMatcher": []
		}
	]
}